{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "GRPC_PORT": "50051"
      },
      "showLog": true
    },
    {
      "name": "Launch Client",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/client/category_scores_client.go",
      "cwd": "${workspaceFolder}/backend",
      "showLog": true
    },
    {
      "name": "Attach to Server",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}",
      "showLog": true
    },
    {
      "name": "Debug Server with Delve",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/backend/bin/server-debug",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "GRPC_PORT": "50051"
      },
      "preLaunchTask": "build-debug",
      "showLog": true
    },
    {
      "name": "Test Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${file}",
      "cwd": "${workspaceFolder}/backend",
      "showLog": true
    },
    {
      "name": "Test Current Package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "cwd": "${workspaceFolder}/backend",
      "showLog": true
    }
  ]
}

